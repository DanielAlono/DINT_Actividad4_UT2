        <Label x:Name="contadorLabel" Content="0/140" HorizontalAlignment="Left" Margin="430,295,0,0" VerticalAlignment="Top" FontSize="18" Width="81" HorizontalContentAlignment="Right" Opacity="0.5"/>

    </Grid>
